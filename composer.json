{
    "name": "hexlet/code",
    "description": "Diff generator.",
    "bin": ["bin/gendiff"],
    "type": "project",
    "autoload": {
        "psr-4": {
            "WebsysForever\\Differ\\": "src/"
        },
        "files": [
            "src/Differ.php",
            "src/Parsers/Parsers.php",
            "src/Formatters/Formatters.php",
            "src/Formatters/Stylish.php",
            "src/Formatters/Plain.php",
            "src/Formatters/Json.php"
        ]
    },
    "authors": [
        {
            "name": "Evgenii",
            "email": "websys.forever@gmail.com"
        }
    ],
    "require": {
        "docopt/docopt": "^1.0",
        "lstrojny/functional-php": "^1.17",
        "symfony/yaml": "^5.4",
        "ext-fileinfo": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5.16",
        "squizlabs/php_codesniffer": "*"
    }
}
